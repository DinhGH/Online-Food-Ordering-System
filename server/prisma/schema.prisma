generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Cập nhật Food model:
model Food {
  id          Int        @id @default(autoincrement())
  name        String
  image       String
  price       Float
  rating      Float
  description String?
  category    String?
  isAvailable String?    
  createdAt   DateTime   @default(now())
}

model Order {
  id              Int      @id @default(autoincrement())
  items           Json
  totalVnd        Int
  totalPaid       Int?
  currency        String?
  paymentMethod   String
  paymentIntentId String?
  paymentStatus   String   @default("pending")
  createdAt       DateTime @default(now())
}

